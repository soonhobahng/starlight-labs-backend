# ============================================================================
# LottoChat AI Backend Environment Variables
# ============================================================================

# Application
APP_NAME="LottoChat AI Clone"
API_PREFIX="/api/v1"
DEBUG=True

# Database
DATABASE_URL=postgresql://postgres:lottochatadmin1234@localhost:5432/lottochat_clone_db

# Redis (for SMS verification codes)
REDIS_URL=redis://localhost:6379/0

# Security
SECRET_KEY=your-secret-key-generate-with-openssl-rand-base64-32
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=1440

# ============================================================================
# OAuth Settings - 각 플랫폼에서 발급받은 키를 입력하세요
# ============================================================================

# Kakao OAuth
# https://developers.kakao.com 에서 앱 생성 후 발급
KAKAO_CLIENT_ID=your-kakao-app-key
KAKAO_CLIENT_SECRET=your-kakao-client-secret
KAKAO_REDIRECT_URI=http://localhost:8000/api/v1/auth/kakao/callback

# Naver OAuth  
# https://developers.naver.com 에서 애플리케이션 등록 후 발급
NAVER_CLIENT_ID=your-naver-client-id
NAVER_CLIENT_SECRET=your-naver-client-secret
NAVER_REDIRECT_URI=http://localhost:8000/api/v1/auth/naver/callback

# Google OAuth
# https://console.cloud.google.com 에서 OAuth 2.0 클라이언트 ID 생성 후 발급
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=http://localhost:8000/api/v1/auth/google/callback

# ============================================================================
# Frontend & CORS
# ============================================================================

# Frontend URL (프론트엔드 배포 주소)
FRONTEND_URL=http://localhost:3000

# CORS 허용 도메인 (쉼표로 구분)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# ============================================================================
# AI Service
# ============================================================================

# Anthropic API Key (Claude AI)
ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key

# ============================================================================
# SMS Service (운영 환경에서만 사용)
# ============================================================================

# SMS 서비스 API 키 (예: CoolSMS, NHN Cloud SMS)
# SMS_API_KEY=your-sms-api-key
# SMS_API_SECRET=your-sms-api-secret
# SMS_SENDER_NUMBER=01012345678

# ============================================================================
# Payments
# ============================================================================

# Toss Payments 설정
# https://developers.tosspayments.com 에서 발급
TOSS_CLIENT_KEY=test_ck_your-toss-client-key
TOSS_SECRET_KEY=test_sk_your-toss-secret-key
TOSS_WEBHOOK_SECRET=your-webhook-secret-key

# Payple 결제 설정
# https://www.payple.kr 에서 발급
PAYPLE_CST_ID=your-payple-cst-id
PAYPLE_CUST_KEY=your-payple-cust-key
PAYPLE_AUTH_KEY=your-payple-auth-key

# 이미지 업로드 - Cloudinary
CLOUDINARY_CLOUD_NAME=your-cloudinary-cloud-name
CLOUDINARY_API_KEY=your-cloudinary-api-key
CLOUDINARY_API_SECRET=your-cloudinary-api-secret

# ============================================================================
# OAuth 애플리케이션 등록 가이드
# ============================================================================

# 🟡 Kakao 설정
# 1. https://developers.kakao.com 접속
# 2. 내 애플리케이션 > 애플리케이션 추가하기
# 3. 앱 키 > REST API 키 복사 → KAKAO_CLIENT_ID
# 4. 제품 설정 > 카카오 로그인 활성화
# 5. Redirect URI 추가: http://localhost:8000/api/v1/auth/kakao/callback
# 6. 동의항목 설정: 닉네임, 카카오계정(이메일), 연령대, 출생년도
# 7. 보안 > Client Secret 발급 → KAKAO_CLIENT_SECRET

# 🟢 Naver 설정  
# 1. https://developers.naver.com 접속
# 2. Application > 애플리케이션 등록
# 3. 서비스 명: LottoChat AI
# 4. 사용 API: 네이버 로그인
# 5. 로그인 오픈API 서비스 환경: PC 웹
# 6. 서비스 URL: http://localhost:3000
# 7. Callback URL: http://localhost:8000/api/v1/auth/naver/callback
# 8. Client ID/Secret 복사

# 🔵 Google 설정
# 1. https://console.cloud.google.com 접속  
# 2. 프로젝트 생성 또는 선택
# 3. API 및 서비스 > 사용자 인증 정보
# 4. OAuth 2.0 클라이언트 ID 생성
# 5. 애플리케이션 유형: 웹 애플리케이션
# 6. 승인된 리디렉션 URI: http://localhost:8000/api/v1/auth/google/callback
# 7. 클라이언트 ID/Secret 복사

# ============================================================================
# 개발 환경 설정
# ============================================================================

# 로컬 개발시 주의사항:
# - Redis 서버가 실행 중이어야 SMS 인증이 정상 동작합니다
# - OAuth 콜백 URL은 정확히 입력해야 합니다 (포트 포함)
# - SECRET_KEY는 운영환경에서 반드시 강력한 키로 변경하세요

# 운영 환경 배포시:
# - 모든 localhost 주소를 실제 도메인으로 변경
# - HTTPS 사용 필수
# - 환경변수로 민감한 정보 관리
# - DEBUG=False 설정